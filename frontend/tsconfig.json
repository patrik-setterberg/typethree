{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "rootDir": "src",
    "outDir": "build",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "module": "ES2020",
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
